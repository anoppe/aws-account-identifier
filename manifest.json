
{
  "manifest_version": 3,
  "name": "My Firefox Extension",
  "version": "1.0",
  "description": "A basic Firefox extension scaffold.",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["colors.json"],
      "matches": ["<all_urls>"]
    },{
      "resources": ["config.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*.console.aws.amazon.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
