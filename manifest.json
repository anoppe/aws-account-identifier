{
  "manifest_version": 3,
  "name": "AWS Account Identifier",
  "version": "1.0",
  "description": "A browser extension to identify AWS accounts by their name and colors.",
  "options_ui": {
    "page": "options.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["colors.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*.console.aws.amazon.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.console.aws.amazon.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
